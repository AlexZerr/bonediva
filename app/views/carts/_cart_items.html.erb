<div class="row-fluid">
  <% @cart_items.each do |item| %>
    <h3 id="cart_item-<%=item.id%>">
      <div class="span4"><%= item.name %></div>
      <div class="span4"><%= number_to_currency item.price %></div>
      <div class"span1">  <%= button_to 'remove', user_cart_cart_item_path(current_user, @cart, item), data: { confirm: "Do you want to delete #{item.name}?", method: :delete, remote: true } %></div>
    </h3>
<% end %>
  </div>

