<div class="row-fluid">
  <div id="list-box">
    <div style="text-align:center">
      <h4>
        <%= "Here is your cart #{current_user.name}"%>
      </h4>
    </div>
  </div>
  <% @cart_items.each do |item| %>
      <div class="cart-items">
        <div class="span12">
          <div class="cart-item">

        <div class="cart-item-name">
          <div class="span4"><%= item.name %></div>
        </div>

        <div class="cart-item-price">
          <% if item.present? %>
          <div class="span2"><%= number_to_currency item.price %></div>
        <% else%>
          00.00
        <%end%>
        </div>

        <div class="span3">
          <div class="cart-item-painting">
            <div class="span6">
              <div class="thumbnails">
                <div class="thumbnail">
                  <% if item.product.present?%>
                    <%= image_tag item.product.main_image(:thumb) %>
                  <% else %>
                    This Product is not avalable
                  <% end %>
                  
                </div>
              </div>
            </div>i
          </div>
        </div>

        <div class="cart-item-button">
          <div class"span2">  <%= button_to 'remove', user_cart_cart_item_path(current_user, @cart, item), id: "button1", data: { confirm: "Do you want to delete #{item.name}?", method: :delete, remote: true } %></div>
        </div>

        </div>
      </div>
    </div>
  <% end %>
  <div class="span12">
    <div id="checkout-list">
        <div id="total-box">
          <h4>
            <div class="span4">Total:</div>
            <div class="span4"><%= number_to_currency @total_price %></div>
            <div class="span4"><%= link_to "Checkout", new_user_cart_order_path(current_user, current_user.carts.last), id: "button1" %></div>
          </h4>
        </div>
    </div>
  </div>
</div>

