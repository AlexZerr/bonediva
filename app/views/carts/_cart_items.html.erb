<div class="row-fluid">
    <% @cart_items.each do |item| %>
  <div id="cart-items">
        <div id="cart-item-name">
          <div class="span5"><%= item.name %></div>
        </div>
        <div id="cart-item-price">
          <div class="span4"><%= number_to_currency item.price %></div>
        </div>
        <div id="cart-item-painting">
          <div class="span3"><%= image_tag item.product.main_image(:thumb) if item.product.present?%>

        </div>
        <div id="cart-item-button">
          <div class"span1">  <%= button_to 'remove', user_cart_cart_item_path(current_user, @cart, item), data: { confirm: "Do you want to delete #{item.name}?", method: :delete, remote: true } %></div>
        </div>
    </div>
      <% end %>
</div>

