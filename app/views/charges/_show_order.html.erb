    <div class="row">
      <div class="span10 offset1">
        Thank you for your purchase of <%= number_to_currency @order.total_price %>
      </div>
    </div>
    <% @cart_products.each do |item| %>
      <div class="row">
        <div class="span11 offset1">
          <div class="row">
            <div class="span3">
              <%= image_tag item.paintings.first.image_url(:thumb) if item.paintings.present? %>
            </div>
            <div class="span3">
              <%= item.name %>
            </div>
            <div class="span3">
              <%= item.price %>
            </div>
          </div>
          <legend></legend>
          <div class="row">
            <strong>Total:</strong> <%= number_to_currency @order.total_price %>
          </div>
        </div>
      </div>
    <% end %>





