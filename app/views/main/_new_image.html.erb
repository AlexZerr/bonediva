<div class="span12">
  <div style="text-align:center">
    <div class="new_image_holder">
      <div class="span12">
        <div class="new_image_title">
          Lisa lurees' latest work:</br>
          <div class="new_title">
            <%= link_to @new_painting.title, painting_path(@new_painting) if @new_painting.present? %>
          </div>
        </div>
      </div>
      <div class="new_image">
        <%= link_to (image_tag @new_painting.image_url(:large)), painting_path(@new_painting) if @new_painting.image_url(:large).present? %>
      </div>
    </div>
  </div>
</div>
