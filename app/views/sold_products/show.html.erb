<% content_for :head do %>
  <%= tag :meta, property: "fb:app_id", content: ENV["FACEBOOK_APP_ID"] %>
  <%= tag :meta, property: "og:site_name", content: "Lisa Luree -Bonediva" %>
  <%= tag :meta, property: "og:type", content: "bonediva:sold_product" %>
  <%= tag :meta, property: "og:title", content: @sold_product.name %>
  <%= tag :meta, property: "og:url", content: sold_product_url(@sold_product) %>
  <%= tag :meta, property: "og:description", content: "#{@sold_product.description} \n Price: $#{@sold_product.price} \n Size: #{@sold_product.size}" %>
  <%= tag :meta, property: "og:image", content: request.protocol + request.host_with_port + image_path(@sold_product.main_image(:standard)) %>
<% end %>

<%= render partial: "products/show_product", locals: {product: @sold_product}%>
