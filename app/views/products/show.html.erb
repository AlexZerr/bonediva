<% content_for :head do %>
  <%= tag :meta, property: "fb:app_id", content: ENV["FACEBOOK_APP_ID"] %>
  <%= tag :meta, property: "og:site_name", content: "Lisa Luree -Bonediva" %>
  <%= tag :meta, property: "og:type", content: "website" %>
  <%= tag :meta, property: "og:title", content: @product.name %>
  <%= tag :meta, property: "og:url", content: product_url(@product) %>
  <%= tag :meta, property: "og:description", content: "#{@product.description} \n Price: $#{@product.price} \n Size: #{@product.size}" %>
  <%= tag :meta, property: "og:image", content: request.protocol + request.host_with_port + image_path(@product.main_image(:home)) %>
<% end %>

<%= render partial: "products/show_product", locals: {product: @product} %>
