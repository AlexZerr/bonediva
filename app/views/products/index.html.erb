<div>
  <div id="category-nav">
    <h4>
      Categories: (select a category)
    </h4>
    <div class="span12">
      <div id="nav">
        <% @categories.each do |cat| %>
          <div class="span2"><%= link_to "> #{cat.name }", category_path(cat) %></div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="span12">
    <%= render partial: "products/products_search" %>
  </div>

  <div class="span12">
    <div id="mid_component">
      <%= render :partial => "products/display_products" %>
    </div>
  </div>
</div>
