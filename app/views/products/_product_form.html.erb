      <div id="errors">
          <%= @product.errors.full_messages if @product.errors.present? %>
      </div>
      <div id="form-info">
        <%= form_for @product, :html => {:multipart => true } do |f| %>
              <div id="name">
                <div><%= f.label :name, 'Name' %></div>
                <div><%= f.text_field :name, required: true %></div>
              </div>
              <div id="description">
                <div><%= f.label :description, 'Description' %></div>
                <div><%= f.text_area :description, rows: 5, cols: 5 %></div>
              </div>
              <!-- <div id="right-side"> -->
              <div id="price">
                <div><%= f.label :price, 'Price' %></div>
                <div><%= f.text_field :price, required: true %></div>
              </div>
              <div id="size">
                <div><%= f.label :size, "Size" %></div>
                <div><%= f.text_field :size, required: true %></div>
              </div>

              <div class="row-fluid">
                <% @categories.to_a.each do |x| %>
                  <div class="span1">
                    <input id="categories" name="categories[category_id][]" type="checkbox" value="<%= x.id%>" <%= x.id.in?(@pcats.map{|e| e.id}) ? "checked" : "" %> />
                  </div>
                  <div class="span3">
                    <label for="categories"><%= x.name %></label>
                  </div>
                <% end%>
              </div>

              <%= render 'print_categories/print_select', f: f %>

            <div id="button"> 
              <div class="span6"><%= f.submit "Update Product", id: "button1" %></div>
            </div>
        <% end %>
      </div>


