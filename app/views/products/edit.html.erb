<h3> Current Info </h3>
<div id="mid_component">
  <p>Name:</br><%= @product.name %></p>
  <p>Description:</br><%= @product.description %></p>
  <p>Price:</br><%= @product.price %></p>
  <p>Size:</br><%= @product.size %></p>
    <% @paintings.each do |p| %>
      <p>Painting:</br><%= image_tag p.image_url(:standard) %></p>
    <% end %>
</div>

<div style="text-align:center">
  <div style="color:red">
    <h1>Edit</h1>
  </div>
</div>
<%= render :partial => "products/product_form" %>
<%= form_for @painting, :html => {:multipart => true } do |p| %>
      <p><%= p.label :image, "Add a Painting" %></br>
      <%= p.file_field :image %></p>
    <% end %>
