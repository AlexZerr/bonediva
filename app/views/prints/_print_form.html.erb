<div id="pform">
  <%= form_for [@product, @print] do |pcf| %>
    <div class="row">
      <div class="span6">
        <%= @print.name %>
        <%= pcf.label :price %>
        <%= pcf.text_field :price, class: "span12", id: 'print-form-price' %>
      </div>
      <div class="span6">
        <%= pcf.label :size %>
        <%= pcf.text_field :size, class: "span11", id: 'print-form-size' %>
      </div>
    </div>
    <div class="row">
      <%= pcf.submit %>
    </div>
  <% end %>
</div>

