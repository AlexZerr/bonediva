 <div id="mid_component">
  <% @paintings.each do |p|%>
    <div class="row-fluid">
      <div class="span12">
        <p>
      <%= p.title %>
      <div>
        <%= image_tag p.image_url(:thumb) %><%= p.description %>
      </div>
      <div>
