<div style="color:#808080">
  <div style="text-align:left">
    <h4>Info</h4>
    <h2><p>Email: <%= @user.email %></p>
      <p>Name: <%= @user.name %></p>
      <p>Username: <%= @user.username %></p>
      <p>Age: <%= number_to_human @user.age %>
      <% if @user.user_link != nil %>
        <p> <%= link_to @user.user_link, "'Website:' http://" + @user.user_link %>
      <% else %>
        <p>website: <%= link_to @user.name, user_path %>
      <% end %>
    </h2>
     <%= link_to "Edit User Info", edit_user_path(@user) %>
 </div>
</div>


<div id="mid_component">
  <div class="row-fluid">
    <% @paintings.each do |p| %>
      <ul id="thumbnails">
        <li class="span3">
            <div>
               <div class="span12"><%= truncate(p.title, length: 18) %></div>
               <div class="span12"><%= link_to (image_tag p.image_url(:thumb).to_s), painting_path(p) %></div>
            </div>
        </li>
      </ul>
    <% end %>
  </div>
</div>

    
