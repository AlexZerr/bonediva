<div style="text-align:center">
  <div style="color:red">
    <h2> Welcome <%= @user.username %></h2>
  </div>
</div>

<%= content_for :sidebar do %>
 <div>
   <%= @pictures %>
 </div>
<% end%>

<div style="color:#808080">
  <div style="text-align:center">
    <h4>Info</h4>
    <% @user.attributes.each do |attr_name, attr_value| %>
      <%= attr_name %> --- <%= attr_value %></br>
   <% end %>
 </div>
</div>

 <div id="mid_component">
   <% @paintings.each do |p| %>
    <div>
      <div>
        <%= p.title %>
      </div>
      <div>
        <%= image_tag (p.image_url(:thumb)) %>
      </div>
      <div>
        <%= p.description %>
      </div>
    </div>
   <% end %>
 </div>

    
