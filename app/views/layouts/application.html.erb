<!DOCTYPE html>
<html>
  <head>
    <title>Bonediva</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="assets/css/bootstrap-responsive.css" rel="stylesheet">
  </head>
  <body>
    <div id="top_bar">
      <p class="left">
        <a href="/">Home</a>
      </p>
      <p id="top-bar-actions">
        <% if !current_user.present? %>
          <p class="right">
            <a href="/sessions/new">Log_in</a>
            <a href="/users/new">Signup</a>
          </p>
        <% else %>
          <p class="left">
             <a href="/paintings/new/">Add a Painting</a>
             <a href="/paintings/">All Paintings</a>
             <%= content_tag "a#cat", id: "cat", data:{ url: categories_url }  do %>
               <a href="#">Categories</a>
             <% end %>
          </p>

          <p class="right">
             <a href="/log_out">Sign Out</a>
          </p>
        <% end %>
      </p>
             <div class="span12">
               <div id="drop-down" >
                 <% Category.all.each do |cat| %>
                   <div class="name">
                     <h6><%= link_to cat.name, category_path(cat) %></h6>
                  </div>
                 <% end %>
               </div>
             </div>
    </div><!--end #top_bar-->
    <%=image_tag("top_image2.jpg", :alt => "rss feed", :class => "top_image")  %>
    <div style="color:red"> 
      <div style="text-align:center" > 
          <%= yield :header %>
      </div>
    </div>
    <% flash.each do |name, message| %>
      <div id="flash_<%= name %>">
        <%= message %>
      </div>
    <% end if !flash.blank? %>
    <div class="container-fluid"> 
      <div class="row-fluid">
        <div class="span10">
          <div class="main">
            <%= yield %>
          </div>
        </div>
          <div class="span2">
        <% if !@hide_sidebar %>
            <div class="side">
              <%= render partial: "layouts/sidebar" %>
              <%= yield :sidebar %>
            </div>
        <% end %>
          </div>
      </div>
    </div>
      <div id="user_nav">
        <% if current_user.present? %>
          <div class="span10">Logged in as <%= current_user.email %></div>
          <div class="span10"><%= link_to "log_out", log_out_path %></div>
        <% else %>
          <div class="span10"><%= link_to "Sign_up", new_user_path %></div>
          <div class="span10"><%= link_to "log_in", log_in_path %></div>
        <% end %>
      </div>
  </body>
</html>
