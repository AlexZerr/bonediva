<div id="mid_component">
  <div style="text-align:center">
    <p><h2><%= "#{@painting.title}" %></h2></p>
    <%= image_tag @painting.image_url(:large) %>
    <p><h4><%= "#{@painting.description}" %></h4></p>
  </div>
  <div>
    <% if current_user.admin? %>
      <%= link_to "make category painting", update_featured_painting %>
      <%= link_to "Delete", @painting, data: { method: :delete, confirm: "Are you sure you want to delete this painting?" } %>
    <% end %>
  </div>
  <%= %>
</div>
