<div id="mid_component">
  <div style="text-align:center">
    <p><h2><%= "#{@painting.title}" %></h2></p>
    <%= image_tag @painting.image_url(:home) %>
    <p><h4><%= "#{@painting.description}" %></h4></p>
  </div>
  <div>
    <% if current_user.admin? %>
      <%= link_to 'Delete', @painting, data: {confirm: "Are you sure you want to delete this painting?", method: :delete} %>
    <% end %>
    <% if @product.present? %>
      <div class="span12">
        <div class="product_painting_link">
          <%= link_to "want to buy this painting?", product_path(@product)%>
        </div>
      </div>
    <% end %>
  </div>
</div>
