<div id="mid_component">
    <% if @product.present? %>
      <div class="span12">
        <div class="product_painting_link">
          <%= link_to "want to buy this painting?", product_path(@product)%>
        </div>
      </div>
    <% end %>

  <div style="text-align:center">
    <p><h2><%= "#{@painting.title}" %></h2></p>
    <%= render partial: "paintings/painting" %>
    <p><h4><%= "#{@painting.description}" %></h4></p>
  </div>
    <div>
      <% if current_user && current_user.email == "lisaluree@gmail.com"%>
        <div id="eby-url">
            <div class="span12"><div style="text-align:center">Ebay Url</div></div>
            <div class="span12"><%=raw @painting.image_url(:large )%></div>
        </div>
      <% end %>
    </div>

  <div>
    <% if current_user.present? && current_user.admin? %>
      <%= link_to 'Delete', @painting, data: {confirm: "Are you sure you want to delete this painting?", method: :delete} %> --
      <%= (link_to "Set As Home Image", set_as_home_image_path(@painting), method: :post) if @painting.home == false %> --
      <%= (link_to "Remove this as your home image", remove_home_image_path(@painting), method: :post) if @painting.home == true %>
    <% end %>
  </div>
</div>
