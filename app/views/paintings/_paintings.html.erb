<div id="second_component">
  <div class="row-fluid">
    <div class="span12">
      <div class="paintings-holder"> 
        <% @paintings.each do |paint| %>
            <div class="images-holder">
          <div class="span3">
              <div class="span12">
                <%= link_to image_tag(paint.image_url(:standard), class: "holdz"), painting_path(paint) %>
              </div>
              <div class="span12">
                 <div class="user-link">
                   Posted by: <%= link_to truncate(paint.user.username, length: 9), user_path(paint.user) if paint.user.present? %>
                 </div>
              </div>
              <div class="span12">
                <div class="admin-links">
                  
                  <% if is_admin? %>
                    <%= link_to 'Delete', paint, remote: true, data: {confirm: "Are you sure?", method: :delete}   %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 
