
<div id="mid_component">
  <div class="row-fluid">
    <% @categories.each do |c| %>
      <div id="painting-holder">
        <div class="span4">
            <%= link_to c.name, category_path(c) %></br>
            <%= c.description %></br>
            <%= link_to (image_tag c.featured_painting.try(:image_url, :thumb )), category_path(c) %></br>
          <% if current_user && is_admin?%>
            <%= link_to "Edit", edit_category_path(c) %>
            <%= link_to 'Delete', c, data: {confirm: "Are you sure you want to delete #{c.name}", method: :delete, remote: true } %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
