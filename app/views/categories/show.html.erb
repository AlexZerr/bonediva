
<h1>Category/show</h1>
<div id="mid_component">
  <%= @category.name %></br>
  <%= @category.description %>
  <div>
    <% @products.each do |product| %>
      <%= product.name %>
      <%= image_tag product.main_image(:standard) %>
      <%= product.description %>
    <% end %>
    

  </div>
  <div>
    <div>
      <% @paintings.each do |p| %>
        <%= p.title %>
        <%= image_tag p.image_url(:standard) %>
          <%= link_to "Check out: #{p.title}", painting_path(p) %>
        <%= link_to "Add as featured", method: :update_featured_painting %> 
      <% end%>
    </div>
  </div>
</div>


