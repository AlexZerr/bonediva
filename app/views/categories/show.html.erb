
<h1>Category/show</h1>
<div id="mid_component">
  <%= @category.name %></br>
  <%= @category.description %>
  <div>
    <% @products.each do |product| %>
      <p>
        <%= image_tag product.main_image(:standard) %></br>
         <%= link_to "View this Product: #{product.name}", product_path(product) %>
      </p>
    <% end %>
  </div>

  <div>
    <div>
      <% @paintings.each do |p| %>
        <p>
        <%= image_tag p.image_url(:standard) %></br>
        <%= link_to "View this painting: #{p.title}", painting_path(p) %></br>
        <%= link_to "Add as featured", method: :update_featured_painting %>
        </p>
      <% end%>
    </div>
  </div>
</div>


