
<h1>Category/show</h1>
<div id="mid_component">
  <%= @category.name %></br>
  <%= @category.description %>
  <div>
    <% @products.each do |product| %>
        <p>
        <%= image_tag (product.main_image(:standard)) %></br>
    <%= link_to "View this Product: #{product.name}", product_path(product) %>
        <%= button_to "Add as featured", update_featured_painting_path(@category, product.paintings.first) %>
      </p>
    <% end %>
  </div>
-------
  <div>
    <div>
      <% @paintings.each do |paint| %>
        <p>
        <%= image_tag paint.image_url(:standard) %></br>
        <%= link_to "View this painting: #{paint.title}", painting_path(paint) %></br>
        <%= button_to "Add as featured", update_featured_painting_path(@category, paint)  %>
        </p>
      <% end%>
    </div>
  </div>
</div>


