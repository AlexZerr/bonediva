<div id="mid_component">
    <% @cart_items.each do |item| %>
  <div>
      <div class="row-fluid">
        <h3>
          <div class="span4"><%= item.name %></div>
          <div class="span4"><%= number_to_currency item.price %></div>
        </h3>
      </div>
  </div>
    <%end%>
  <h1>
    <div>
      <div class="row-fluid">
        <div class="span4">Items:</div>
        <div class="span5"><%= "#{@cart_items.count} Items"%>
      </div>
    </div>
    <div>
      <div class="row-fluid">
        <div class="span4">Total:</div>
        <div class="span6"><%= number_to_currency @price %></div>
      </div>
    </div>
  </h1>
  <div>
    <div style="color:red">
      <div class="row-fluid">
        <h2>
          <div class="span3">First Name</div>
          <div class="span3">Last Name</div>
          <div class="span3">Card Type</div>
        </h2>
      </div>
    </div>
  </div>
  <div>
    <h3>
      <div class="row-fluid">
        <div class="span3"><%= @order.first_name %></div>
        <div class="span3"><%= @order.last_name %></div>
        <div class="span3"><%= @order.card_type %></div>
      </div>
    </h3>
  </div>
  <div>
    <div style="color:red">
      <div class="row-fluid">
        <h2>
          <div class="span3">Card Number</div>
          <div class="span3">Card Verificaion #</div>
          <div class="span3">Experation</div>
        </h2>
      </div>
   </div>
  </div>
  <div>
    <h3>
      <div class="row-fluid">
        <div class="span3"><%= @order.card_number %></div>
        <div class="span3"><%= @order.card_verification %></div>
        <div class="span3"><%= @order.card_expires_on %></div>
      </div>
    </h3>
  </div>
</div>
