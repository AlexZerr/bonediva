<%= form_for Order.new do |o| %>
  <%= o.label :first_name, "First Name" %>
  <%= o.text_field :first_name %></br>
  <%= o.label :last_name, "Last Name" %>
  <%= o.text_field :last_name %></br>
  <%= o.label :card_type, "Card Type" %>
  <%= o.select :card_type, [["Visa", "visa"], ["MasterCard", "master"], ["American Express", "american_express"], ["Discover", "discover"]] %></br>
  <%= o.label :card_number, "Card Number" %>
  <%= o.number_field :card_number %></br>
  <%= o.label :card_verification, "Card Verification" %>
  <%= o.number_field :card_number %></br>
  <%= o.label :card_expires_on, "Experation Date" %>
  <%= o.date_select :card_expires_on, discard_day: true, start_year: Date.today.year, end_year: (Date.today.year+10), add_month_numbers: true %></br>
  <%= o.submit %>
<% end %>
