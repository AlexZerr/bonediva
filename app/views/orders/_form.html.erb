<div>
<%= form_for @order do |o| %>
  <div>
    <div class="row-fluid">
      <h3>
          <div class="span4">Card Info</div>
          <div class="span4">Billing Address</div>
      </h3>
    </div>
  </div>
  <div style="color:grey">
    <div>
      <div class="row-fluid">
        <div class="span4">
          <%= o.label :first_name, "First Name" %>
          <%= o.text_field :first_name %>
        </div>
        <div class="span4">
        <%= o.label :address, "Address" %>
        <%= o.text_field :address %></div>
      </div>
    </div>
    <div>
      <div class="row-fluid">
        <div class="span4"><%= o.label :last_name, "Last Name" %>
        <%= o.text_field :last_name %></div>
        <div class="span4"><%= o.label :city, "City" %>
        <%= o.text_field :city %></div>
      </div>
    </div>
    <div>
      <div class="row-fluid">
        <div class="span4"><%= o.label :card_type, "Card Type" %>
        <%= o.select :card_type, [["Visa", "visa"], ["MasterCard", "master"], ["American Express", "american_express"], ["Discover", "discover"]] %></div>
        <div class="span4"><%= o.label :state, "State" %>
        <%= o.text_field :state %></div>
      </div>
    </div>
    <div>
      <div class="row-fluid">
        <div class="span4"><%= o.label :card_number, "Card Number" %>
        <%= o.number_field :card_number %></div>
        <div class="span4"><%= o.label :zip_code, "Zip Code" %>
        <%= o.number_field :zip_code %></div>
      </div>
    </div>
    <div>
      <div class="row-fluid">
        <div class="span4"><%= o.label :card_verification, "Card Verification" %>
        <%= o.number_field :card_number %></div>
        <div class="span4"><%= o.label :country, "Country" %>
        <%= o.text_field :country, default: "United States"%></div>
      </div>
    </div>
    <div>
      <div class="row-fluid">
        <div class="span4"><%= o.label :card_expires_on, "Experation Date" %>
        <%= o.date_select :card_expires_on, discard_day: true, start_year: Date.today.year, end_year: (Date.today.year+10), add_month_numbers: true %></div>
      </div>
    </div>
  </div>
    
    <%= o.submit %>
<% end %>
</div>
