<div class="row">
  <div class="span10 offset2">

    <div class="row">
      <div class="span6 offset2">
        <h3>Shipping Info</h3>
      </div>
    </div>

    <div class="row">
      <div class="span6">
        <strong>First Name:</strong> <%= @order.first_name %>
      </div>
      <div class="span6">
        <strong>Last Name:</strong> <%= @order.last_name %>
      </div>
    </div>

    <div class="row">
      <div class="span6">
        <strong>Address:</strong> <%= @order.address %>
      </div>
      <div class="span6">
        <strong>City:</strong> <%= @order.city %>
      </div>
    </div>

    <div class="row">
      <div class="span6">
        <strong>State:</strong> <%= @order.state %>
      </div>
      <div class="span6">
        <strong>Zip:</strong> <%= @order.zip_code %>
      </div>
    </div>

  </div>
</div>
